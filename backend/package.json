{
  "name": "careerforge-backend",
  "version": "1.0.0",
  "description": "CareerForge Backend - AI-powered CV parsing and ATS optimization",
  "main": "src/server.js",
  "_moduleAliases": {
    "@core": "src/core",
    "@shared": "src/shared",
    "@modules": "src/modules",
    "@config": "src/core/config",
    "@utils": "src/core/utils",
    "@errors": "src/core/errors",
    "@middleware": "src/core/middleware",
    "@infrastructure": "src/core/infrastructure",
    "@constants": "src/core/constants",
    "@ai": "src/shared/external/ai",
    "@storage": "src/shared/external/storage",
    "@messaging": "src/shared/messaging",
    "@pdf": "src/shared/external/pdf"
  },
  "scripts": {
    "start": "node -r module-alias/register src/server.js",
    "dev": "nodemon --exec \"node -r module-alias/register\" src/server.js",
    "worker": "node -r module-alias/register --max-old-space-size=8192 src/shared/messaging/workers/unified.worker.js",
    "worker:dev": "nodemon --exec \"node -r module-alias/register --max-old-space-size=8192\" src/shared/messaging/workers/unified.worker.js",
    "worker:ats": "node -r module-alias/register src/shared/messaging/workers/unified.worker.js --queues=ats_analysis",
    "worker:parsing": "node -r module-alias/register src/shared/messaging/workers/unified.worker.js --queues=cv_parsing",
    "worker:generation": "node -r module-alias/register src/shared/messaging/workers/unified.worker.js --queues=cv_generation",
    "kill-port": "node scripts/utilities/kill-port.js",
    "test": "jest --config=config/jest.config.js --coverage",
    "test:unit": "jest --config=config/jest.config.js --testPathPattern=tests/unit",
    "test:integration": "jest --config=config/jest.config.js --testPathPattern=tests/integration",
    "test:watch": "jest --config=config/jest.config.js --watch",
    "test:cv": "node scripts/integration-tests/test-backend-cv.js",
    "test:cv:quick": "node scripts/integration-tests/test-cv-quick.js",
    "test:ollama": "node ../../scripts/test-ollama-integration.js",
    "test:apis": "node scripts/test/test-all-apis.js",
    "test:apis:simple": "node scripts/test/test-api-endpoints-simple.js",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix"
  },
  "keywords": [
    "cv",
    "ats",
    "ai",
    "pdf-parsing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/s3-request-presigner": "^3.958.0",
    "@google/generative-ai": "^0.24.1",
    "@huggingface/inference": "^4.13.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.66.4",
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "handlebars": "^4.7.8",
    "ioredis": "^5.8.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "module-alias": "^2.2.3",
    "mongoose": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "ollama": "^0.6.3",
    "openai": "^6.15.0",
    "pdf-parse": "^1.1.4",
    "pdfkit": "^0.15.0",
    "puppeteer": "^23.11.1",
    "redis": "^5.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.3",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.2",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}