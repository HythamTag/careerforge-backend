<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{personalInfo.firstName}} {{personalInfo.lastName}} - CV</title>
    <style>
        body {
            font-family: 'Helvetica', sans-serif;
            margin: 0;
            padding: 40px;
            line-height: 1.5;
            color: #333;
        }

        .header {
            margin-bottom: 40px;
            border-bottom: 1px solid #eee;
            padding-bottom: 20px;
        }

        .name {
            font-size: 28px;
            margin-bottom: 5px;
            font-weight: 300;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .contact-info {
            font-size: 14px;
            color: #666;
            margin-top: 10px;
        }

        .contact-item {
            display: inline-block;
            margin-right: 15px;
        }

        .contact-item a {
            color: #666;
            text-decoration: none;
            border-bottom: 1px dotted #ccc;
        }

        .section {
            margin-bottom: 35px;
        }

        .section-title {
            font-size: 16px;
            margin-bottom: 15px;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #222;
        }

        .item {
            margin-bottom: 25px;
        }

        .item-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
        }

        .item-title {
            font-weight: bold;
            font-size: 15px;
        }

        .item-subtitle {
            font-style: italic;
            color: #555;
            font-size: 14px;
        }

        .item-date {
            color: #888;
            font-size: 13px;
        }

        .description {
            font-size: 14px;
            color: #444;
            margin-top: 5px;
        }

        .description ul {
            margin: 5px 0 0 15px;
            padding: 0;
        }

        .description li {
            margin-bottom: 3px;
        }

        .skill-group {
            margin-bottom: 10px;
        }

        .skill-category {
            font-weight: bold;
            font-size: 14px;
            margin-bottom: 3px;
            display: inline-block;
            min-width: 120px;
        }

        .skill-list {
            display: inline;
            font-size: 14px;
            color: #555;
        }

        .languages-list {
            font-size: 14px;
        }
    </style>
</head>

<body>
    <div class="header">
        <h1 class="name">{{personalInfo.firstName}} {{personalInfo.lastName}}</h1>
        {{#if title}}<div style="font-size: 16px; color: #777;">{{title}}</div>{{/if}}

        <div class="contact-info">
            {{#if personalInfo.email}}<span class="contact-item">{{personalInfo.email}}</span>{{/if}}
            {{#if personalInfo.phone}}<span class="contact-item">{{personalInfo.phone}}</span>{{/if}}
            {{#if personalInfo.country}}<span class="contact-item">{{personalInfo.country}}</span>{{/if}}

            {{#each personalInfo.links}}
            <span class="contact-item">
                <a href="{{url}}" target="_blank">{{label}}</a>
            </span>
            {{/each}}
        </div>
    </div>

    {{#if professionalSummary}}
    <div class="section">
        <h2 class="section-title">Summary</h2>
        <p style="font-size: 14px; margin: 0;">{{professionalSummary}}</p>
    </div>
    {{/if}}

    {{#if workExperience.length}}
    <div class="section">
        <h2 class="section-title">Experience</h2>
        {{#each workExperience}}
        <div class="item">
            <div class="item-header">
                <span class="item-title">{{title}}</span>
                <span class="item-date">
                    {{startDate}} {{#if endDate}}- {{endDate}}{{else}}{{#if current}}- Present{{/if}}{{/if}}
                </span>
            </div>
            <div class="item-subtitle">{{company}}{{#if location}} | {{location}}{{/if}}</div>
            {{#if description}}
            <div class="description">{{{description}}}</div>
            {{/if}}
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if projects.length}}
    <div class="section">
        <h2 class="section-title">Projects</h2>
        {{#each projects}}
        <div class="item">
            <div class="item-header">
                <span class="item-title">
                    {{title}}
                    {{#if url}}<a href="{{url}}" style="font-size: 12px; margin-left: 10px; color: #555;"
                        target="_blank">[Link]</a>{{/if}}
                </span>
            </div>
            <div class="description">{{{description}}}</div>
            {{#if technologies.length}}
            <div style="font-size: 13px; color: #666; margin-top: 3px;">
                Technologies: {{#each technologies}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
            </div>
            {{/if}}
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if education.length}}
    <div class="section">
        <h2 class="section-title">Education</h2>
        {{#each education}}
        <div class="item">
            <div class="item-header">
                <span class="item-title">{{degree}}</span>
                <span class="item-date">
                    {{startDate}} {{#if endDate}}- {{endDate}}{{else}}{{#if current}}- Present{{/if}}{{/if}}
                </span>
            </div>
            <div class="item-subtitle">{{institution}}{{#if location}} | {{location}}{{/if}}</div>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if skills.length}}
    <div class="section">
        <h2 class="section-title">Skills</h2>
        {{#each skills}}
        <div class="skill-group">
            <span class="skill-category">{{category}}:</span>
            <span class="skill-list">
                {{#each skills}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
            </span>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if certifications.length}}
    <div class="section">
        <h2 class="section-title">Certifications</h2>
        {{#each certifications}}
        <div class="item" style="margin-bottom: 15px;">
            <div class="item-header">
                <span class="item-title" style="font-size: 14px;">{{name}}</span>
                <span class="item-date">{{startDate}}</span>
            </div>
            <div class="item-subtitle">{{company}}</div>
        </div>
        {{/each}}
    </div>
    {{/if}}

</body>

</html>