                        "url": {
                            "raw": "{{baseUrl}}/v1/cvs/{{cvId}}/duplicate",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "cvs",
                                "{{cvId}}",
                                "duplicate"
                            ]
                        },
                        "description": "Creates a duplicate copy of an existing CV."
                    },
                    "response": []
                },
                {
                    "name": "Update CV State",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"published\": true,\n    \"archived\": false\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/v1/cvs/{{cvId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "cvs",
                                "{{cvId}}"
                            ]
                        },
                        "description": "Updates metadata/state of a CV (e.g., publish, archive)."
                    },
                    "response": []
                },
                {
                    "name": "Bulk Operations",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"action\": \"archive\",\n    \"cvIds\": [\"{{cvId}}\"]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/v1/cvs/bulk",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "cvs",
                                "bulk"
                            ]
                        },
                        "description": "Performs actions on multiple CVs at once. Supported actions: `archive`, `delete`."
                    },
                    "response": []
                },
                {
                    "name": "Delete CV",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/v1/cvs/{{cvId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "cvs",
                                "{{cvId}}"
                            ]
                        },
                        "description": "Permanently deletes a CV."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "4. Parsing Jobs",
            "description": "Manage asynchronous parsing jobs. Used to track progress of CV text extraction.",
            "item": [
                {
                    "name": "Start Parsing",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"cvId\": \"{{cvId}}\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/v1/parsing-jobs",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "parsing-jobs"
                            ]
                        },
                        "description": "Manually triggers a parsing job for a CV."
                    },
                    "response": []
                },
