                        },
                        "url": {
                            "raw": "{{baseUrl}}/v1/optimization-jobs",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "optimization-jobs"
                            ]
                        },
                        "description": "Starts a comprehensive AI optimization job.\n- **Required**: `cvId`, `targetJobTitle`.\n- **Optional**: `jobDescription` (for tailoring)."
                    },
                    "response": []
                },
