            ]
        },
        {
            "name": "2. Authentication",
            "description": "User authentication endpoints. includes registration, login, and profile management. **Note:** Successful login/register automatically sets the `token` variable.",
            "item": [
                {
                    "name": "Register",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 201\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "if(pm.response.code === 201) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set(\"token\", jsonData.data.token);",
                                    "    pm.collectionVariables.set(\"userId\", jsonData.data.user.id);",
                                    "    console.log(\"Token and UserID saved to collection variables.\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test-user@example.com\",\n    \"password\": \"SecurePass123!\",\n    \"firstName\": \"Test\",\n    \"lastName\": \"User\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/v1/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "auth",
                                "register"
                            ]
                        },
                        "description": "Registers a new user. \n- **Required**: email, password, firstName, lastName.\n- **Auto-Script**: Saves `token` to variables."
                    },
                    "response": []
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "if(pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set(\"token\", jsonData.data.token);",
                                    "    pm.collectionVariables.set(\"userId\", jsonData.data.user.id);",
                                    "    console.log(\"Token and UserID saved to collection variables.\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test-user@example.com\",\n    \"password\": \"SecurePass123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/v1/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Authenticates a user.\n- **Required**: email, password.\n- **Auto-Script**: Saves `token` to variables."
                    },
                    "response": []
                },
                {
                    "name": "Get User Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/v1/users/me",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "users",
                                "me"
                            ]
                        },
                        "description": "Retrieves the currently authenticated user's profile."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "3. CV Operations",
            "description": "Core CRUD operations for CVs. Handles uploading, searching, and managing CV entities.",
            "item": [
                {
                    "name": "List CVs",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/v1/cvs",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "cvs"
                            ]
                        },
                        "description": "Lists all CVs belonging to the authenticated user. Supports pagination."
                    },
                    "response": []
                },
                {
                    "name": "Create CV (Manual)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 201\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "if(pm.response.code === 201) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set(\"cvId\", jsonData.data.id || jsonData.data.cv.id);",
                                    "    console.log(\"CV ID saved: \" + pm.collectionVariables.get(\"cvId\"));",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"fileName\": \"John_Doe_Full_Stack.pdf\",\n    \"parsedData\": {\n        \"personalInfo\": {\n            \"fullName\": \"John Doe\",\n            \"email\": \"john.doe@example.com\",\n            \"phone\": \"+1234567890\",\n            \"location\": \"San Francisco, CA\",\n            \"linkedin\": \"linkedin.com/in/johndoe\",\n            \"github\": \"github.com/johndoe\"\n        },\n        \"professionalSummary\": \"Experienced Full Stack Developer with 5+ years in building scalable web applications.\",\n        \"experience\": [\n            {\n                \"title\": \"Senior Developer\",\n                \"company\": \"Tech Corp\",\n                \"startDate\": \"2020-01\",\n                \"endDate\": \"Present\",\n                \"description\": \"Led a team of 5 developers...\"\n            }\n        ],\n        \"education\": [\n            {\n                \"degree\": \"B.S. Computer Science\",\n                \"school\": \"University of Tech\",\n                \"year\": \"2019\"\n            }\n        ],\n        \"skills\": [\"JavaScript\", \"React\", \"Node.js\", \"MongoDB\", \"AWS\"]\n    }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/v1/cvs",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "cvs"
                            ]
                        },
                        "description": "Manually creates a CV record with JSON data. Useful for testing without file upload.\n- **Auto-Script**: Saves `cvId` to variables."
                    },
                    "response": []
                },
                {
                    "name": "Upload CV (File)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 201\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "if(pm.response.code === 201) {",
                                    "    var jsonData = pm.response.json();",
                                    "    var cvId = jsonData.data.cv ? jsonData.data.cv.id : jsonData.data.id;",
                                    "    pm.collectionVariables.set(\"cvId\", cvId);",
                                    "    console.log(\"CV ID saved from upload: \" + cvId);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": []
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/v1/cvs/upload",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "v1",
                                "cvs",
                                "upload"
                            ]
                        },
                        "description": "Uploads a PDF file to create a new CV. Initiates parsing automatically.\n- **Body**: multipart/form-data with `file` field.\n- **Auto-Script**: Saves `cvId` to variables."
                    },
                    "response": []
                },
                {
                    "name": "Search CVs",
                    "request": {
